<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link type="css" rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>

    <div style="padding-left:16px">
        <h2>List user:</h2>
        <%= dataUser %>
            <div class="w3-container">
                <table class="w3-table-all w3-hoverable">
                    <thead>
                        <tr class="w3-light-grey">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Created at</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i=0; i<dataUser.length; i++) { %>
                            <tr>
                                <td>
                                    <%= dataUser[i].id %>
                                </td>
                                <td>
                                    <%= dataUser[i].name %>
                                </td>
                                <td>
                                    <%= dataUser[i].email %>
                                </td>
                                <td>
                                    <%= dataUser[i].created_at %>
                                </td>
                                <td>
                                    <button><a href="/abc/detail/user/<%= dataUser[i].id %>"
                                            target="_blank">Detail</a></button>
                                    <form action="/abc/edit-user/<%= dataUser[i].id %>" method="get">
                                        <button>Update</button>
                                    </form>
                                    <form action="/abc/delete-user" method="post">
                                        <input type="text" hidden value="<%= dataUser[i].id %>" name="userId">
                                        <button type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% } %>

                    </tbody>
                </table>
            </div>
            <div class="create_new_user">
                <form action="/abc/create-new-user" method="post">
                    <div><b>Create new user</b></div>
                    <div>
                        <label>Name:</label>
                        <input type="text" name="name" />
                    </div>
                    <div>
                        <label>Email:</label>
                        <input type="email" name="email" />
                    </div>
                    <div>
                        <label>Created At:</label>
                        <input type="text" name="created_at" />
                    </div>
                    <div>
                        <button type="submit">Create</button>
                    </div>
                </form>
            </div>
    </div>
</body>

</html>